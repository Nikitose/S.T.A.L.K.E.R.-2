{% extends "categorie.twig" %}

{% block sub_nav %}
	{% if lang == 'fr' %}
		<li><a href="mutants-en.php"><img class="logo-langue" src="images/accueil/langue-en.jpg"></a></li>
	{% else %}
		<li><a href="mutants-fr.php"><img class="logo-langue" src="images/accueil/langue-fr.webp"></a></li>
	{% endif %}		
{% endblock %}

{% block content %}

<!--LES_ARTICLES_MUTANTS-->
<div class="content">
	<!--TITRE-->
	<h2>Mutants</h2>
	<div class="box-trait">
		<div class="trait-gauche"></div>
		<i class="fa-solid fa-circle-radiation"></i>
		<div class="trait-droite"></div>
	</div>
	{% for mutants in categorie %}
	<article class="mutants" id="{{ mutants.id }}">
		<div class="box">
			<div class="box-2">
				<!--titre_article-->
				<h3>{{ mutants.nom }}</h3>
				<!--IMAGE-->
				<img class="img-mut apparition" src="{{ mutants.url }}" alt="{{ mutants.alt_image }}">
				<!--DESCRTIPTION-->
				<p class="description">{{ mutants.description }}</p>
			</div>
			<div class="box-2">
				<!--DANGER-->
				<p>{{ mutants.danger }}</p>
				<p>
					{% for i in range(1, mutants.niveau_danger) %}
						<i class="fa-solid fa-skull"></i>
					{% endfor %}
					{% if mutants.niveau_danger != 5 %}
						{% for i in range(1, 5 - mutants.niveau_danger) %}
							<i class="fa-solid fa-skull gris"></i>
						{% endfor %}
					{% endif %}
				</p>
				<!--DANGER-->
				<p>{{ mutants.rareté }}</p>
				<p>
					{% for i in range(1, mutants.niveau_rareté) %}
						<i class="fa-solid fa-clover"></i>
					{% endfor %}
					{% if mutants.niveau_rareté != 5 %}
						{% for i in range(1, 5 - mutants.niveau_rareté) %}
							<i class="fa-solid fa-clover gris"></i>
						{% endfor %}
					{% endif %}
				</p>
			</div>
		</div>
	</article>
	{% endfor %}
</div>

<!--JAVA-SCRIPT-->
<script src="js/apparition-image.js"></script>

{% endblock %}